{
  "name": "react-doodle",
  "version": "1.0.0-alpha.0",
  "description": "React responsive drawing component with user friendly controls and multi-format export capabilities.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/cjs/*.js"
    },
    "./package.json": "./package.json"
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "types": "tsc --noEmit",
    "build:types": "tsc --emitDeclarationOnly",
    "build:esm": "BABEL_ENV=esm babel --root-mode upward src --out-dir dist --extensions '.ts,.tsx'",
    "build:cjs": "BABEL_ENV=cjs babel --root-mode upward src --out-dir dist/cjs --extensions '.ts,.tsx'",
    "build": "npm run build:types && npm run build:esm && npm run build:cjs",
    "prepack": "npm run build"
  },
  "keywords": [
    "react",
    "responsive",
    "drawing",
    "component",
    "data-url",
    "blob",
    "canvas"
  ],
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0",
    "styled-components": ">=5.0.0"
  },
  "author": "Morgan Ney <morganney@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/morganney/react-doodle.git",
    "directory": "packages/react-doodle"
  },
  "bugs": {
    "url": "https://github.com/morganney/react-doodle/issues"
  }
}
